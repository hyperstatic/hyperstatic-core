{
  "name": "@hyperstatic/core",
  "description": "The bowerls of the beast",
  "homepage": "https://documentup.com/hyperstatic/hyperstatic-core",
  "version": "0.0.0",
  "main": "src/index.js",
  "author": {
    "email": "josefrancisco.verdu@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hyperstatic/hyperstatic-core.git"
  },
  "bugs": {
    "url": "https://github.com/hyperstatic/hyperstatic-core/issues"
  },
  "keywords": [],
  "dependencies": {
    "cheerio": "~1.0.0-rc.2",
    "debug": "~3.1.0",
    "html-urls": "~1.0.9"
  },
  "devDependencies": {
    "ava": "latest",
    "coveralls": "latest",
    "finepack": "latest",
    "git-authors-cli": "latest",
    "git-dirty": "latest",
    "husky": "latest",
    "lint-staged": "latest",
    "nyc": "latest",
    "prettier-standard": "latest",
    "pretty": "~2.0.0",
    "standard": "latest",
    "standard-markdown": "latest"
  },
  "engines": {
    "node": ">= 8"
  },
  "scripts": {
    "clean": "rm -rf node_modules",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "lint": "standard-markdown && standard",
    "precommit": "lint-staged",
    "pretest": "npm run lint",
    "pretty": "prettier-standard index.js {core,test,bin,scripts}/**/*.js --single-quote --print-width 100",
    "test": "nyc ava test/*.js"
  },
  "license": "MIT",
  "lint-staged": {
    "package.json": [
      "finepack",
      "git add"
    ],
    "*.js": [
      "prettier-standard",
      "git add"
    ],
    "*.md": [
      "standard-markdown",
      "git add"
    ]
  }
}
